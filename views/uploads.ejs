<%- include('partials/header.ejs')%>
<div class="container-fluid w-75">
  <br>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h3 class="text-center mb-4">Single Image Upload!</h3>
      <div class="custom-file">
        <form
          action="/upload-single"
          method="post"
          enctype="multipart/form-data"
        >
        
          <div class="custom-file">
            <input
              type="file"
              class="custom-file-input"
              id="customFile"
              name="singleImage"
            /><br /><br />
            <label class="custom-file-label" for="customFile"
              >Choose file</label
            >
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">
            Upload Image
          </button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h3 class="text-center mb-4">
        <br />
        <h3 class="text-center mb-4">Multiple Image Upload!</h3>
      </h3>
      <div class="custom-file">
        <form
          action="/upload-multiple"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="custom-file">
            <input
              type="file"
              class="custom-file-input"
              id="customFile"
              multiple
              name="multipleImage"
            /><br /><br />
            <label class="custom-file-label" for="customFile"
              >Choose file</label
            >
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">
            Upload Image
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs')%>
